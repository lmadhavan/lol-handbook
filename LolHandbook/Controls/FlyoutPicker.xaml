<UserControl
    x:Class="LolHandbook.Controls.FlyoutPickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Label}" VerticalAlignment="Center" />

        <Button Style="{ThemeResource TextBlockButtonStyle}" Content="{Binding SelectedItem}">
            <Button.Flyout>
                <Flyout x:Name="Flyout">
                    <ListBox ItemsSource="{Binding ItemsSource}" SelectedValue="{Binding SelectedItem, Mode=TwoWay}" SelectionChanged="OnSelectionChanged" />
                </Flyout>
            </Button.Flyout>
        </Button>
    </StackPanel>
</UserControl>
