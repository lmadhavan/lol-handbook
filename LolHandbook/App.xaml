<Application
    x:Class="LolHandbook.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="using:LolHandbook.Resources"
    xmlns:conv="using:LolHandbook.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:DataTemplates />
            </ResourceDictionary.MergedDictionaries>
            
            <conv:HtmlConverter x:Key="HtmlConverter" />
            <conv:ImageUriConverter x:Key="ImageUriConverter" />
            <conv:TagsConverter x:Key="TagsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
