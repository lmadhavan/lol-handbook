<ContentDialog
    x:Class="LolHandbook.Views.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About this app"
    PrimaryButtonText="OK"
    DataContext="{Binding AboutViewModel, Source={StaticResource ViewModelLocator}}">

    <StackPanel Orientation="Vertical" Margin="0,12">
        <TextBlock>
            <Run Text="{Binding AppName}"/>
            <Run Text="{Binding AppVersion}" />
        </TextBlock>

        <TextBlock Text="{Binding Copyright}" />
        
        <HyperlinkButton Click="OnRateAndReviewApp">
            <TextBlock>
                <Run Text="Rate and review" />
                <Run Text="{Binding AppName}" />
            </TextBlock>
        </HyperlinkButton>

        <TextBlock Margin="0,20" FontWeight="SemiBold">
            <Run Text="Game patch version: "/>
            <Run Text="{Binding PatchVersion}" />
        </TextBlock>

        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="{Binding RiotNotice}" TextWrapping="WrapWholeWords" />
    </StackPanel>
</ContentDialog>
